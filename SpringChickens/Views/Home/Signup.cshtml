@using SpringChickens.ViewModels
@model SignupViewmodel
@{
    ViewData["Title"] = "Signup to SpringChickens";
}


    <div class="row">
        <div class="col-md-1">

        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">

                    <h2 class="text-center mb-3">Sign-up</h2>

                    <form asp-controller="Home" asp-action="RegisterNewUser">
                        <div class="form-group">
                            <label asp-for="UserName">Username</label>
                            <input asp-for="UserName" type="text" class="form-control" placeholder="Enter Username" required>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email">Email</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Enter Email" required>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password">Password</label>
                            <input type="password" class="form-control" asp-for="Password" placeholder="Enter Password" required>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword">Confirm Password</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" required>
                        </div>
                        <button type="submit" class="btn btn-primary float-right">Submit</button>
                        <small class="form-text text-danger text-left">@Model.ErrorMessage</small>
                    </form>

                </div>
            </div>
            <br />
        </div>
        <div class="col-md-4">
            <div class="card">
                <h3 class="card-header">Password Policy</h3>
                <ul class="list-group list-group-flush card-body">
                    <li class="list-group-item">Must have at least one capital letter.</li>
                    <li class="list-group-item">Must have at least one lower case letter.</li>
                    <li class="list-group-item">Must have at least one number.</li>
                </ul>
            </div>

            <br />

            <div class="card">
                <h3 class="card-header">Username Policy</h3>
                <ul class="list-group list-group-flush card-body">
                    <li class="list-group-item">Must be at least 6 letters long.</li>
                </ul>
            </div>

        </div>

        <div class="col-md-1">

        </div>

    </div>