@using Interfaces.ViewModels
@using SpringChickens.ViewModels;
@model IBaseViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/calendar.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <link href="~/newBike.ico" rel="shortcut icon" type="image/x-icon" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-toggleable-md navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SpringChickens</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-md-inline-flex flex-sm-row">


                    <ul class="navbar-nav flex-grow-1">
                        @{
                            if (!Model.Layout_SignedIn)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Signup">Sign-up</a>
                                </li>
                            }
                        }

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Calendar">Upcoming Events</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Trip" asp-action="Index">All Feeds</a>
                        </li>

                        @{
                            if (Model.Layout_IsAdmin)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Site Manager</a>
                                </li>
                            }
                        }

                        @{
                            if (!Model.Layout_SignedIn)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Reset" asp-action="Index">Forgot password</a>
                                </li>
                            }
                        }
                    </ul>

                    @{
                        if (!Model.Layout_SignedIn)
                        {
                            <form class="form-inline" asp-controller="Home" asp-action="Login">
                                <input asp-for="Layout_Username" type="text" class="form-control mr-sm-2" placeholder="Username" aria-label="Username" />
                                <input asp-for="Layout_Password" type="password" class="form-control mr-sm-2 my-2" placeholder="Password" aria-label="Password" />
                                <button type="submit" class="btn btn-primary">Sign-in</button>
                            </form>
                        }
                        else
                        {

                            <p>Hello, @Model.Layout_Username! <a asp-controller="Home" asp-action="SignOut">Sign-out?</a></p>
                        }
                    }





                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - SpringChickens
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
